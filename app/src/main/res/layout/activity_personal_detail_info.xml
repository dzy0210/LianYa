<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrator.home.PersonalDetailInfoActivity"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>
            <ImageView
                android:id="@+id/iv_right_outlined1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right_outlined"/>
            <TextView
                android:id="@+id/tv_worker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/iv_right_outlined1"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>
            <ImageView
                android:id="@+id/iv_right_outlined2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right_outlined"/>
            <TextView
                android:id="@+id/tv_worker_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/iv_right_outlined2"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
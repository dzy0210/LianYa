<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="员工姓名："
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原工作站："
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/SpinnerOriginalWorkstation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借调类型："
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/SpinnerLeaveType"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的工作站："
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/SpinnerDestinationWorkstation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借调开始时间："
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_begin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借调结束时间："
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余包信息："
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_secondment_leave_bag"
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <Button
        android:id="@+id/btn_secondment_confirmation"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="同意借调，且确认调整"
        android:textSize="17sp" />

</LinearLayout>